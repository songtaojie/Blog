            //剩余时间格式转换：
            function arrive_timer_format(s) {
                var t;
                if (s > -1) {
                    var hour = Math.floor(s / 3600);
                    var min = Math.floor(s / 60) % 60;
                    var sec = s % 60;
                    var day = parseInt(hour / 24);
                    if (day > 0) {
                        hour = hour - 24 * day;
                        t = day + "day " + hour + ":";
                    }
                    else t = hour + ":";
                    if (min < 10) { t += "0"; }
                    t += min + ":";
                    if (sec < 10) { t += "0"; }
                    t += sec;
                }
                return t;
