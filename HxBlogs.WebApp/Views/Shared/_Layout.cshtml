@using StackExchange.Profiling;
@using StackExchange.Profiling.Mvc
@{ 
    var startHidden = !string.IsNullOrEmpty(Request.QueryString["startHidden"]);
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 海·星の博客</title>
    @Styles.Render("~/content/boot")
    @Styles.Render("~/content/site")
    @RenderSection("styles", required: false)
</head>
<body>
    
    @{ 
        Html.RenderPartial("~/Views/Layout/_Header.cshtml");
    }
    <div class="container-fluid">
        @RenderBody()
    </div>
    @if (ViewBag.ShowFooter != false)
    {
        Html.RenderPartial("~/Views/Layout/_Footer.cshtml");
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/boot")
    @Scripts.Render("~/bundles/site")
    <script>
        //if (!(/msie [6|7|8|9]/i.test(navigator.userAgent))) {
        //    (function () {
        //        window.scrollReveal = new scrollReveal({ reset: true });
        //    })();
        //};
        $(function () {
            $('li.dropdown.user').mouseenter(function () {
                $(this).addClass('show');
                $(this).children('.dropdown-menu').addClass('show');
            }).mouseleave(function () {
                $(this).removeClass('show');
                $(this).children('.dropdown-menu').removeClass('show');
            });
        });
    </script>
    @RenderSection("scripts", required: false)
    @if (ViewBag.Orientation != null)
    {
        var position = (RenderPosition)ViewBag.Orientation;
        @MiniProfiler.Current.RenderIncludes(position: position, showTrivial: false, showTimeWithChildren: false, startHidden: startHidden)
    }
    else
    {
        @MiniProfiler.Current.RenderIncludes(position: RenderPosition.BottomLeft, showTrivial: false, showTimeWithChildren: false, startHidden: false)
    }
</body>
</html>
